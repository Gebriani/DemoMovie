<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:id="@+id/item_root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/item_movie_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/item_movie_like"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/item_movie_image"
            android:layout_margin="5dp"
            android:src="@mipmap/ic_like" />


        <TextView
            android:id="@+id/item_movie_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_movie_image"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@id/item_movie_like"
            android:text="Avengers: Age of Ultron"
            android:textColor="@color/font_semi_black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_movie_genres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_movie_title"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="action, adventure, comedy"
            android:textSize="12sp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>
